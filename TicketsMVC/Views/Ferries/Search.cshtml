@using TicketsMVC.Models
@model SearchViewModel

<script type="text/javascript">
    $(window).load(function () {
        $(".cssload-loader").fadeOut("slow");
    });
</script>
<script src = "https://maps.googleapis.com/maps/api/js?key=AIzaSyCE-zxKGCB7flXHlaoCAkvr0JfjbhdH3ko" async defer></script>

@using (Html.BeginForm("Results", "Ferries", FormMethod.Get, new { enctype = "multipart/form-data", @class = "form-horizontal container", role = "form" }))
{

    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="row" >
        <ul class="list-inline col-md-12">
            <li>
                <input class="with-gap" name="TripType" type="radio" id="TripTypeS" value="Simple" />
                <label for="TripTypeS" style="padding-right:5px">Απλή Μετάβαση</label>
                <img src="../Content/Searchimages/oneway.png" style="position:relative;top:5px">
            </li>
            <li>
                <input class="with-gap" name="TripType" type="radio" id="TripTypeWR" value="WithReturn" />
                <label for="TripTypeWR" style="padding-right:5px">Με επιστροφή</label>
                <img src="../Content/Searchimages/withreturn.png" style="position:relative;top:5px">
            </li>
            <li>
                <input class="with-gap" name="TripType" type="radio" id="TripTypeM" value="Multiple" />
                <label for="TripTypeM" style="padding-right:5px">Πολλαπλή μετάβαση</label>
                <img src="../Content/Searchimages/multipledirections.png" style="position:relative;top:5px">
            </li>
        </ul>
</div>

    <div class="row" id="fromto0">
        <div class="input-field col s6" id="depallroute0">
            <label for="FromPort" class="control-label">
                <a style="cursor:pointer">
                    Επιλέξτε λιμάνι Αναχωρησης
                    <img src="../Content/Searchimages/portfrom.png">
                </a>
            </label>
            @Html.TextBoxFor(m => m.FromPort, new {@class = "form-control", placeholder = "Εισάγετε όνομα λιμανιού πόλης", tabindex = 1})
            @Html.ValidationMessageFor(m => m.FromPort, "", new { @class = "text-danger" })
        </div>
        
        <div class="input-field col s6" id="arrallroute0">
            <label for="ToPort" class="control-label">
                <a style="cursor:pointer">
                    Επιλέξτε λιμάνι Προορισμού
                    <img src="../Content/Searchimages/portto.png">
                </a>
            </label>
            @Html.TextBoxFor(m => m.ToPort, new {@class = "form-control", placeholder = "Εισάγετε όνομα λιμανιού πόλης", tabindex = 2})
            @Html.ValidationMessageFor(m => m.ToPort, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="row" id="dates">
        <div class="col-md-3" id="depalldate">
            <label for="departure" class="control-label">Αναχώρηση</label>
            @Html.TextBoxFor(m => m.DateFrom, new { @class = "form-control datepicker", @readonly = "readonly", type = "text", id = "departuredate0", placeholder = "Εισάγετε ημ/νια αναχώρησης", tabindex = 3 })
            @Html.ValidationMessageFor(m => m.DateFrom, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-3" id="arralldate">
            <label for="arrive" class="control-label">Επιστροφή</label>
            @Html.TextBoxFor(m => m.DateTo, new { @class = "form-control datepicker", @readonly = "readonly", type = "text", id = "arrivedate0", placeholder = "Εισάγετε ημ/νια επιστροφής", tabindex = 4 })
            @Html.ValidationMessageFor(m => m.DateTo, "", new { @class = "text-danger" })
        </div>

        @* Passengers *@
        <div class="col-md-2">
            <div class="popover-markup">
                <label for="NumOfPassengers" class="control-label">Επιβάτες</label>
                @Html.TextBoxFor(m => m.NumOfPassengers, new { @class = "form-control", @readonly = "readonly", id = "numpassengers", style = "width: 60%", data_toggle = "popover", data_placement = "bottom", placeholder = "Εισάγετε αριθμό επιβατών", tabindex = 1, })
                @Html.ValidationMessageFor(m => m.NumOfPassengers, "", new { @class = "text-danger" })

                <div class="content hide">
                    @* ADULTS *@
                    <div class="row bottom-border-class" id="passengeradult" style="margin-bottom:5px">
                        <input class="col-md-3 form-control" name="adults" data-val-required="Παρακαλώ εισάγετε αριθμό επιβατών" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="adults"><span style="font-weight:bolder">Ενήλικες</span><br/>Από 16 εώς 65 ετών</label>
                            <img src="../Content/Searchimages/typeadult.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    @* TEENS *@
                    <div class="row bottom-border-class" id="passengerteen" style="margin-bottom:5px">
                        <input class="col-md-3 form-control" name="teens" data-val-required="Παρακαλώ εισάγετε αριθμό επιβατών" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="teens"><span style="font-weight:bolder">Έφηβοι</span><br/>Από 12 εώς 16 ετών</label>
                            <img src="../Content/Searchimages/typeteen.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    @* KIDS *@
                    <div class="row bottom-border-class" id="passengerkid" style="margin-bottom:5px">
                        <input class="col-md-3 form-control" name="kids" data-val-required="Παρακαλώ εισάγετε αριθμό επιβατών" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="kids"><span style="font-weight:bolder">Παιδιά</span><br/>Από 2 εώς 12 ετών</label>
                            <img src="../Content/Searchimages/typekid.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    @* INFANTS *@
                    <div class="row bottom-border-class" id="passengerinfant" style="margin-bottom: 5px">
                        <input class="col-md-3 form-control" name="infants" data-val-required="Παρακαλώ εισάγετε αριθμό επιβατών" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="infants"><span style="font-weight:bolder">Βρέφη</span><br/>Kάτω των 2 ετών</label>
                            <img src="../Content/Searchimages/typeinfant.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    @* OLDS *@
                    <div class="row bottom-border-class" id="passengerold" style="margin-bottom:5px">
                        <input class="col-md-3 form-control" name="olders" data-val-required="Παρακαλώ εισάγετε αριθμό επιβατών" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="olders"><span style="font-weight:bolder">Ηλικιωμένοι</span><br/>Άνω των 65 ετών</label>
                            <img src="../Content/Searchimages/typeolder.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                </div>
            </div>
        </div>
        @Html.HiddenFor(x => x.NumOfAdults, new { @id = "NumOfAdults", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfTeens, new { @id = "NumOfTeens", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfKids, new { @id = "NumOfKids", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfInfants, new { @id = "NumOfInfants", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfOlders, new { @id = "NumOfOlders", @style = "display: none;", tabindex = -1 })

        @* Vehicles *@
        <div class="col-md-2">
            <div class="popover-markup">
                <label for="NumOfVehicles" class="control-label">Οχήματα</label>
                @Html.TextBoxFor(m => m.NumOfVehicles, new { @class = "form-control", @readonly = "readonly", id = "numvehicles", style = "width: 60%", data_toggle = "popover", data_placement = "bottom", placeholder = "Εισάγετε αριθμό οχημάτων", tabindex = -1 })
                @Html.ValidationMessageFor(m => m.NumOfVehicles, "", new { @class = "text-danger" })

                <div class="content hide">
                    @*Cars*@
                    <div class="row bottom-border-class" id="vehiclecars" style="margin-bottom: 5px">
                        <input class="col-md-3 form-control" name="cars" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="cars" style="margin-top:10px">Αυτοκίνητα</label>
                            <img src="../Content/Searchimages/typecar.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    @*Motorcycles*@
                    <div class="row bottom-border-class" id="vehiclemotos" style="margin-bottom: 5px">
                        <input class="col-md-3 form-control" name="motos" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="motos" style="margin-top:10px">Μηχανές</label>
                            <img src="~/Content/Searchimages/typemoto.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    @* Traler *@
                    <div class="row bottom-border-class" id="vehicletrailers" style="margin-bottom: 5px">
                        <input class="col-md-3 form-control" name="trailers" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="trailers">Τρεϊλερ<br/>τροχόσπιτα</label>
                            <img src="../Content/Searchimages/typecamper-trailer.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    <div class="row bottom-border-class" id="vehicleminibuses" style="margin-bottom:5px">
                        <input class="col-md-3 form-control" name="minibuses" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="minibuses">Οικογενειακά<br/>λεωφορεία</label>
                            <img src="../Content/Searchimages/typeminibus.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                    <div class="row bottom-border-class" id="vehicletrucks" style="margin-bottom:5px">
                        <input class="col-md-3 form-control" name="trucks" data-val="true" tabindex=-1 required>
                        <div class="col-md-7">
                            <label for="minibuses" style="margin-top:10px">Φορτηγά</label>
                            <img src="../Content/Searchimages/typetruck.png" />
                        </div>
                        <div class="col-md-1 waves-effect waves-light increment"></div>
                        <div class="col-md-1 waves-effect waves-light decrement"></div>
                    </div>

                </div>
            </div>
        </div>
        @Html.HiddenFor(x => x.NumOfCars, new { @id = "NumOfCars", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfMotos, new { @id = "NumOfMotos", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfTrailers, new { @id = "NumOfTrailers", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfMiniBuses, new { @id = "NumOfMiniBuses", @style = "display: none;", tabindex = -1 })
        @Html.HiddenFor(x => x.NumOfTrucks, new { @id = "NumOfTrucks", @style = "display: none;", tabindex = -1 })

    </div>

    //SUBMIT BUTTON
    <div class="row">
        <div class="col-md-10">
            <button value="Send" class="btn waves-effect waves-light orange" type="submit" style="float:right">Αναζήτηση&nbsp;&nbsp;&nbsp;&nbsp;<img src="../Content/Searchimages/boatsearch.png" /></button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/fancybox")
    @Styles.Render("~/Content/fancybox")
    @Scripts.Render("~/bundles/map")
    @Scripts.Render("~/Scripts/search.js")
    @Scripts.Render("~/Scripts/moment/moment.js")
    @Styles.Render("~/Content/Search.css")
}


